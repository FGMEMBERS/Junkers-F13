  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitres</object-name>
    <object-name>vitreporteG</object-name>
    <object-name>vitreporteD</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitres</object-name>
    <object-name>vitreporteG</object-name>
    <object-name>vitreporteD</object-name>
    <object-name>propblur</object-name>
    <object-name>propdisc</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>vitres</object-name>
    <object-name>vitreporteG</object-name>
    <object-name>vitreporteD</object-name>
    <object-name>propblur</object-name>
    <object-name>propdisc</object-name>
  </effect>

  <!-- Une ombre pour OSG -->
  <model>
    <path>Aircraft/Junkers-F13/Models/shadow.xml</path>
    <offsets>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -1.600 </z-m>
    </offsets>
  </model>

  <!-- L'interieur -->
  <model>
    <name>Interieur</name>
    <path>Aircraft/Junkers-F13/Models/Interior/interior.xml</path>
  </model>

  <!-- For Rembrandt -->
  <animation>
    <type>noshadow</type>
    <object-name>Interieur</object-name>
  </animation>

  <!-- Cranking effects -->
  <model>
    <path>Aircraft/Junkers-F13/Models/Effects/cranking/cranking.xml</path>
    <offsets>
      <x-m> -3.738 </x-m>
      <y-m>  0.147 </y-m>
      <z-m>  0.850 </z-m>
      <pitch-deg> -45 </pitch-deg>
    </offsets>
  </model>

  <!-- L'hélice -->
  <animation>
    <name>HeliceComplete</name>
    <object-name>helice</object-name>
    <object-name>bol</object-name>
    <object-name>propdisc</object-name>
    <object-name>propblur</object-name>
  </animation>

  <!-- Séléction de l'objet visible en fonction des rpm -->
  <animation>
    <type>select</type>
    <object-name>propdisc</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>900</value>
      </greater-than>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>propblur</object-name>
    <condition>
    <and>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value>300.000</value>
      </greater-than>
      <less-than>
        <property>engines/engine[0]/rpm</property>
        <value>900.001</value>
      </less-than>
    </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>helice</object-name>
    <condition>
      <less-than>
        <property>engines/engine[0]/rpm</property>
	<value>900</value>
      </less-than>
    </condition>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>HeliceComplete</object-name>
    <condition>
      <greater-than>
        <property>engines/engine[0]/rpm</property>
        <value> 5 </value>
      </greater-than>
    </condition>
    <property>engines/engine[0]/rpm</property>
    <factor> 1 </factor>
    <center>
      <x-m> -4.633 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.003 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor> 20 </factor>
    <axis>
      <x1-m> -1.558 </x1-m>
      <y1-m> -7.337 </y1-m>
      <z1-m> -0.080 </z1-m>
      <x2-m> -0.628 </x2-m>
      <y2-m> -3.439 </y2-m>
      <z2-m> -0.504 </z2-m>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor> 20 </factor>
    <axis>
      <x1-m> -0.628 </x1-m>
      <y1-m>  3.439 </y1-m>
      <z1-m> -0.504 </z1-m>
      <x2-m> -1.558 </x2-m>
      <y2-m>  7.337 </y2-m>
      <z2-m> -0.080 </z2-m>
    </axis>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor> 20 </factor>
    <center>
      <x-m> 3.900 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.105 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>surface-positions/rudder-pos-norm</property>
    <factor> 20 </factor>
    <center>
      <x-m> 4.104 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.180 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 0 </y>
      <z> 1 </z>
    </axis>
  </animation>

  <!-- Compression -->
  <animation>
    <name>TrainGauche</name>
    <object-name>roueG</object-name>
    <object-name>axe2G</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainGauche</object-name>
    <property>gear/gear[0]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep>   5 </dep></entry>
      <entry><ind> 0.1 </ind><dep>   0 </dep></entry>
      <entry><ind> 1.0 </ind><dep> -10 </dep></entry>
    </interpolation>
    <center>
      <x-m> -2.461 </x-m>
      <y-m> -0.488 </y-m>
      <z-m> -0.679 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>axe3G</object-name>
    <property>gear/gear[0]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep>   5 </dep></entry>
      <entry><ind> 0.1 </ind><dep>   0 </dep></entry>
      <entry><ind> 1.0 </ind><dep> -10 </dep></entry>
    </interpolation>
    <center>
      <x-m> -2.582 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -1.319 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <name>TrainDroit</name>
    <object-name>roueD</object-name>
    <object-name>axe2D</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>TrainDroit</object-name>
    <property>gear/gear[1]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep>  -5 </dep></entry>
      <entry><ind> 0.1 </ind><dep>   0 </dep></entry>
      <entry><ind> 1.0 </ind><dep>  10 </dep></entry>
    </interpolation>
    <center>
      <x-m> -2.461 </x-m>
      <y-m>  0.488 </y-m>
      <z-m> -0.679 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>axe3D</object-name>
    <property>gear/gear[1]/compression-norm</property>
    <interpolation>
      <entry><ind> 0.0 </ind><dep> -5 </dep></entry>
      <entry><ind> 0.1 </ind><dep>  0 </dep></entry>
      <entry><ind> 1.0 </ind><dep> 10 </dep></entry>
    </interpolation>
    <center>
      <x-m> -2.582 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -1.319 </z-m>
    </center>
    <axis>
      <x> 1 </x>
      <y> 0 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Rotation des roues lors du roulage -->
  <animation>
    <type>spin</type>
    <object-name>roueG</object-name>
    <property>gear/gear[0]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -2.581 </x-m>
      <y-m> -1.009 </y-m>
      <z-m> -1.343 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>spin</type>
    <object-name>roueD</object-name>
    <property>gear/gear[1]/rollspeed-ms</property>
    <factor> 30 </factor>
    <center>
      <x-m> -2.581 </x-m>
      <y-m>  1.009 </y-m>
      <z-m> -1.343 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- Animation des portes -->
  <animation>
    <name>LaPorteGauche</name>
    <object-name>porteG</object-name>
    <object-name>vitreporteG</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>LaPorteGauche</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>LaPorteGauche</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <factor> -175 </factor>
    <axis>
      <x1-m> -1.410 </x1-m>
      <y1-m> -0.546 </y1-m>
      <z1-m>  0.175 </z1-m>
      <x2-m> -1.292 </x2-m>
      <y2-m> -0.541 </y2-m>
      <z2-m>  0.618 </z2-m>
    </axis>
  </animation>

  <animation>
    <name>LaPorteDroite</name>
    <object-name>porteD</object-name>
    <object-name>vitreporteD</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>LaPorteDroite</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.passenger.toggle();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>LaPorteDroite</object-name>
    <property>sim/model/door-positions/passenger/position-norm</property>
    <factor> 175 </factor>
    <axis>
      <x1-m> -1.410 </x1-m>
      <y1-m>  0.546 </y1-m>
      <z1-m>  0.175 </z1-m>
      <x2-m> -1.292 </x2-m>
      <y2-m>  0.541 </y2-m>
      <z2-m>  0.618 </z2-m>
    </axis>
  </animation>

  <!-- Ajout des effets lumineux -->
  <model>
