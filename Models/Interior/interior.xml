<?xml version="1.0" encoding="ISO-8859-1"?> 

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intporteG</object-name>
    <object-name>intporteD</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitreporteG</object-name>
    <object-name>intvitreporteD</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intvitreporteG</object-name>
    <object-name>intvitreporteD</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intvitreporteG</object-name>
    <object-name>intvitreporteD</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <object-name>intvitres</object-name>
    <object-name>intvitreporteG</object-name>
    <object-name>intvitreporteD</object-name>
  </effect>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Junkers-F13/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -2.657 </x-m>
      <y-m> -0.265 </y-m>
      <z-m>  0.095 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Junkers-F13/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -2.832 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.298 </z-m>
    </offsets>
  </model>

  <!-- Animation des portes -->
  <animation>
    <name>IntLaPorteGauche</name>
    <object-name>intporteG</object-name>
    <object-name>intvitreporteG</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>IntLaPorteGauche</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.crew.toggle();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntLaPorteGauche</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <factor> -175 </factor>
    <axis>
      <x1-m> -1.410 </x1-m>
      <y1-m> -0.546 </y1-m>
      <z1-m>  0.175 </z1-m>
      <x2-m> -1.292 </x2-m>
      <y2-m> -0.541 </y2-m>
      <z2-m>  0.618 </z2-m>
    </axis>
  </animation>

  <animation>
    <name>IntLaPorteDroite</name>
    <object-name>intporteD</object-name>
    <object-name>intvitreporteD</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>IntLaPorteDroite</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.passenger.toggle();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntLaPorteDroite</object-name>
    <property>sim/model/door-positions/passenger/position-norm</property>
    <factor> 175 </factor>
    <axis>
      <x1-m> -1.410 </x1-m>
      <y1-m>  0.546 </y1-m>
      <z1-m>  0.175 </z1-m>
      <x2-m> -1.292 </x2-m>
      <y2-m>  0.541 </y2-m>
      <z2-m>  0.618 </z2-m>
    </axis>
  </animation>

</PropertyList>

